{
  "name": "react-typing-game-hook",
  "version": "1.3.3",
  "description": "Easily create typing game functionality (10fastestfinger, monkeytype, keybr, etc) with this react hook that handles the typing logic",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "author": "Peng Chong",
  "repository": {
    "type": "git",
    "url": "https://github.com/jokarz/react-typing-game-hook.git"
  },
  "homepage": "https://github.com/jokarz/react-typing-game-hook",
  "bugs": {
    "url": "https://github.com/jokarz/react-typing-game-hook/issues"
  },
  "keywords": [
    "custom hook",
    "customizable hook",
    "easy to use",
    "flexible hook",
    "hook",
    "keyboard game",
    "keyboard challenge",
    "keyboard practice",
    "keyboard test",
    "react",
    "react hook",
    "simple hook",
    "typing flexible",
    "typing challenge",
    "typing function",
    "typing game",
    "typing practice",
    "typing simple",
    "typing speed",
    "typing test",
    "use hook",
    "usehook"
  ],
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest --watch"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleDirectories": [
      "<rootDir>/node_modules",
      "node_modules"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": true
  },
  "peerDependencies": {
    "react": ">= 16.14.0",
    "react-dom": ">= 16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.8",
    "babel-runtime": "^6.26.0",
    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.50.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,md}": [
      "prettier --write",
      "jest -b --ci --passWithNoTests"
    ]
  }
}
